<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Budgets - Money Manager</title>
  <link rel="stylesheet" href="/css/transaction.css"> <!-- Reuse your existing styles -->
</head>
<body>
  <nav class="nav">
    <div class="logo">
      <img src="https://res.cloudinary.com/dcjtbfnww/image/upload/v1740935604/piggy-bank-svgrepo-com_rosebd.svg" class="logo-svg" alt="Money Manager Logo">
      <span>Money Manager</span>
    </div>
    <div class="nav-links">
      <a href="/dashboard">Dashboard</a>
      <a href="/transactions">Transactions</a>
      <a href="/budgets" class="active">Budgets</a>
      <a href="/reports">Reports</a>
      <button id="logoutBtn"><a style="color: white;" href="/logout">Logout</a></button>
    </div>
  </nav>

  <% if (error && error.length > 0) { %>
    <div class="alert alert-error">
      <%= error[0] %>
    </div>
  <% } %>
  <% if (success && success.length > 0) { %>
    <div class="alert alert-success">
      <%= success[0] %>
    </div>
  <% } %>

  <main class="dashboard">
    <!-- Budget Creation Form -->
    <section class="transaction-form">
      <h2>Add New Budget</h2>
      <form action="/budgets" method="POST">
        <div class="form-group">
          <label>Category</label>
          <select name="category" required>
            <% for (let cat of categories) { %>
              <option value="<%= cat %>"><%= cat %></option>
            <% } %>
          </select>
        </div>
        <div class="form-group">
          <label>Target Amount</label>
          <input type="number" name="target" step="0.01" required>
        </div>
        <button type="submit" class="submit-btn">Create Budget</button>
      </form>
    </section>
  </main>

  <script>
    setTimeout(() => {
      const alertElem = document.querySelector('.alert');
      if(alertElem) {
        alertElem.style.transition = 'opacity 0.5s ease-out';
        alertElem.style.opacity = '0';
        setTimeout(() => alertElem.remove(), 500);
      }
    }, 2000);
  </script>
</body>
</html>
