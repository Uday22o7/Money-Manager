<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard - Money Manager</title>
  <link rel="stylesheet" href="/css/dashboard.css" />
</head>

<body>
  <!-- Top Navigation -->
  <nav class="nav">
    <div class="logo">
      <img src="/img/piggy-bank-svgrepo-com.svg" class="logo-svg" alt="Money Manager Logo" />
      <span>Money Manager</span>
    </div>
    <div class="nav-links">
      <a href="/dashboard" class="active">Dashboard</a>
      <a href="/transactions">Transactions</a>
      <a href="/budgets">Budgets</a>
      <a href="/reports">Reports</a>
      <button id="logoutBtn"> <a style="color: white;" href="/logout">Logout</a> </button>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="dashboard">
    <!-- Quick Stats -->
    <div class="stats-container">
      <div class="stat-card">
        <h3>Current Balance</h3>
        <p class="balance">₹0.00</p>
      </div>
      <div class="stat-card">
        <h3>Monthly Budget</h3>
        <p class="budget">₹0.00</p>
      </div>
    </div>

  <% if (error.length > 0) { %>
      <div class="alert alert-error">
        <%= error[0] %>
      </div>
  <% } %>
  
  <% if (success.length > 0) { %>
      <div class="alert alert-success">
          <%= success %>
      </div>
  <% } %>

    <!-- Recent Transactions -->
    <section class="recent-transactions">
      <h2>Recent Transactions</h2>
      <div class="transactions-list">
        <% transactions.forEach(transaction => { %>
          <div class="transaction-item <%= transaction.type %>">
            <span class="amount">₹<%= transaction.amount.toFixed(2) %></span>
            <span class="account"><%= transaction.account %></span>
            <span class="category"><%= transaction.categories %></span>
            <span class="date"><%= new Date(transaction.date).toLocaleDateString() %></span>
            <!-- Edit and Delete buttons -->
            <a href="/transactions/<%= transaction._id %>/edit" class="edit-btn">Edit</a>
            <form action="/transactions/<%= transaction._id %>/delete" method="POST" style="display:inline;">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </div>
        <% }); %>
      </div>
    </section>
  </main>

  <!-- <script>
    // Logout functionality
    document.getElementById('logoutBtn').addEventListener('click', () => {
      localStorage.removeItem('token');
      window.location.href = '/auth';
    });
  </script> -->
</body>

</html>